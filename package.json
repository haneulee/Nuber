{
  "name": "nuber",
  "version": "1.0.0",
  "description": "It's a Uber application for code study",
  "main": "n",
  "scripts": {
    "predev": "npm run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api",
    "start": "cd dist && node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haneulee/Nuber.git"
  },
  "author": "Haneul LEE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/haneulee/Nuber/issues"
  },
  "homepage": "https://github.com/haneulee/Nuber#readme",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/mailgun-js": "^0.22.3",
    "@types/node": "^12.0.0",
    "@types/twilio": "0.0.10",
    "bcrypt": "^3.0.6",
    "class-validator": "^0.14.0",
    "copy": "^0.3.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "gql-merge": "0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "graphql-tools": "^4.0.4",
    "graphql-yoga": "^1.17.4",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "merge-graphql-schemas": "^1.5.8",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.0",
    "now": "^16.4.3",
    "pg": "^7.11.0",
    "ts-node": "^8.1.0",
    "tslint-config-prettier": "^1.18.0",
    "twilio": "^3.34.0",
    "typeorm": "^0.2.17",
    "typescript": "^3.4.5"
  }
}